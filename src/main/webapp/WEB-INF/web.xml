<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>LoginControler</servlet-name>
  	<display-name>LoginControler</display-name>
  	<description></description>
  	<servlet-class>com.hamdhan.cabweb.controller.LoginControler</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RegisterController</servlet-name>
  	<display-name>RegisterController</display-name>
  	<description></description>
  	<servlet-class>com.hamdhan.cabweb.controller.RegisterController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DriverController</servlet-name>
  	<display-name>DriverController</display-name>
  	<description></description>
  	<servlet-class>com.hamdhan.cabweb.controller.DriverController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>VehicleController</servlet-name>
  	<display-name>VehicleController</display-name>
  	<description></description>
  	<servlet-class>com.hamdhan.cabweb.controller.VehicleController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginControler</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RegisterController</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RegisterController</servlet-name>
  	<url-pattern>/add_view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DriverController</servlet-name>
  	<url-pattern>/driver_add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DriverController</servlet-name>
  	<url-pattern>/driver_delete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DriverController</servlet-name>
  	<url-pattern>/driver_view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DriverController</servlet-name>
  	<url-pattern>/driver_edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>VehicleController</servlet-name>
  	<url-pattern>/vehicle_add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>VehicleController</servlet-name>
  	<url-pattern>/vehicle_edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>VehicleController</servlet-name>
  	<url-pattern>/vehicle_view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>VehicleController</servlet-name>
  	<url-pattern>/vehicle_delete</url-pattern>
  </servlet-mapping>
</web-app>
